---
import type { CollectionEntry } from 'astro:content';
import { cn } from '~/lib/utils';

interface Props {
  prevPost?: CollectionEntry<'posts'>;
  nextPost?: CollectionEntry<'posts'>;
  class?: string;
}

const { prevPost, nextPost, class: className } = Astro.props;
---

<section class={cn('flex items-stretch justify-between gap-2', className)}>
  <div class="text-left">
    {
      prevPost && (
        <>
          <p class="text-text-2">Previous</p>
          <a class="link" href={`/posts/${prevPost.data.slug}`}>
            {prevPost.data.title}
          </a>
        </>
      )
    }
  </div>
  <div class="text-right">
    {
      nextPost && (
        <>
          <p class="text-text-2">Next</p>
          <a class="link" href={`/posts/${nextPost.data.slug}`}>
            {nextPost.data.title}
          </a>
        </>
      )
    }
  </div>
</section>
